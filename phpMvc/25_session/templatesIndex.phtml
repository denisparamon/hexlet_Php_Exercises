<?php if (count($flash) > 0): ?>
    <ul>
        <?php foreach ($flash as $messages): ?>
            <?php foreach ($messages as $message): ?>
                <li><?= htmlspecialchars($message, ENT_QUOTES, 'UTF-8') ?></li>
            <?php endforeach ?>
        <?php endforeach ?>
    </ul>
<?php endif ?>

<?php if (!isset($user)): ?>
    <form action="/session" method="POST">
        <label for="name">Name</label>
        <input type="text" name="user[name]" id="name" required>

        <label for="password">Password</label>
        <input type="password" name="user[password]" id="password" required>

        <button type="submit">Sign In</button>
    </form>
<?php else: ?>
    <p>Welcome, <?= htmlspecialchars($user['name'], ENT_QUOTES, 'UTF-8') ?>!</p>
    <form action="/session" method="POST">
        <input type="hidden" name="_METHOD" value="DELETE">
        <button type="submit">Sign Out</button>
    </form>
<?php endif ?>
